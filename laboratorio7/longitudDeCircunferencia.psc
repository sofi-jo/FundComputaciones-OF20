Algoritmo longitudDeCircunferencia
	//Declaración de variables
	definir r Como Real;
	definir l Como Real;
	definir numPi Como Real;
	
	//Inicializacion de variables
	numPi<-3.1416;
	r<-0;
	l<-0;
	
	//Entrada de datos
	escribir"valor de r";
	leer r;
	
	
	l<-(2*numPi*r);
	
	Escribir("La longitud de la circunferencia es:"),l;
	
	
	
FinAlgoritmo
